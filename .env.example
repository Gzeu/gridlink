# Neon PostgreSQL (Free Tier)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Upstash Redis (Free Tier)
UPSTASH_REDIS_REST_URL=https://YOUR_CLUSTER.upstash.io
UPSTASH_REDIS_REST_TOKEN=YOUR_TOKEN

# Google Sheets API
GOOGLE_SHEETS_API_KEY=YOUR_GOOGLE_API_KEY

# MultiversX EGLD Blockchain
NEXT_PUBLIC_EGLD_API_URL=https://devnet-api.multiversx.com
NEXT_PUBLIC_EGLD_CHAIN_ID=D

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Optional: Vercel Environment
NODE_ENV=production
VERCEL_URL=https://gridlink.vercel.app

# API Rate Limiting (Free tier: 1000 calls/month)
API_RATE_LIMIT=1000
